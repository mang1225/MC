  </PreferenceCategory>
  <PreferenceCategory android:title="WIFI">
    <CheckBoxPreference
      android:key="disabled_wifi"
      android:title="禁用WIFI"
      android:widgetLayout="@layout/custom_switch_layout"></CheckBoxPreference>
  </PreferenceCategory>
  <PreferenceCategory android:title="蓝牙">
    <CheckBoxPreference
      android:key="disabled_bluetooth"
      android:title="禁用蓝牙"
      android:widgetLayout="@layout/custom_switch_layout"></CheckBoxPreference>
  </PreferenceCategory>
  <PreferenceCategory android:title="其他">
    <Preference
      android:key="lock_screen"
      android:title="锁屏"></Preference>
